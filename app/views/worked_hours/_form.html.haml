= simple_form_for @worked_hour, html: {class: 'form-inline'} do |f|
  = f.input :amount, default: 1.0, wrapper: :append, label: false do
    = f.input_field :amount, class: 'span1', placeholder: t('worked_hours.fields.number')
    %span.add-on.abbn
      Hrs.

  = f.input :description, as: :string, label: false, input_html: {placeholder: t('worked_hours.fields.description')}
  = f.input :on, as: :string, input_html: {class: 'datepicker span2', placeholder: t('worked_hours.fields.date')}, label: false

  = f.association :ticket, collection: @tickets, label_method: :system_ticket_and_name, include_blank: t('worked_hours.fields.ticket'), label: false
  = f.association :tag, collection: @tags, include_blank: t('worked_hours.fields.tag'), label: false

  = f.submit 'Add', class: 'btn btn-primary'

%hr